<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/joke_id"
        style="@style/TextLevel1Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/spacing_tiny"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/joke_type"
        style="@style/TextLevel1Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joke_id"
        android:padding="@dimen/spacing_tiny"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/joke_setup"
        style="@style/TextLevel1Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joke_type"
        android:padding="@dimen/spacing_tiny"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/joke_punchline"
        style="@style/TextLevel1Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joke_setup"
        android:padding="@dimen/spacing_tiny"/>

</androidx.constraintlayout.widget.ConstraintLayout>